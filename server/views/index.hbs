    <footer class="p-10 flex justify-center bg-gradient-to-b from-gray-200 via-gray-300 to-gray-400">
        <p>Himpunan Mahasiswa Komunikasi Universitas Pertamina 2022<sub>&#174;</sub> - Website by <a
                class="text-blue-500 hover:text-blue-500" href="https://www.linkedin.com/in/rafli-jaskandi/"
                target="_blank" rel="noopener noreferrer">VladRafli</a></p>
    </footer>
    <!-- A11y-Dialog Login Form -->
    <div class="dialog-container flex fixed top-0 right-0 bottom-0 left-0 z-[2] [&[aria-hidden=true]]:hidden"
        id="login-dialog" aria-hidden="true" aria-labelledby="Login Dialog" aria-describedby="Dialog for Login">
        <div class="dialog-overlay fixed top-0 right-0 bottom-0 left-0 bg-gray-700 bg-opacity-80">
        </div>
        <div class="dialog-content w-full max-w-[50vw] min-w-[20rem] m-auto p-10 flex flex-col relative bg-white z-[2]"
            role="document">
            <button data-a11y-dialog-hide class="dialog-close mb-5 text-[2.5rem] self-end"
                aria-label="Close this dialog window">
                &times;
            </button>
            <h1 class="mb-5 text-3xl text-center">Login</h1>
            <div id="login-alert" class="hidden p-4 mb-4 bg-red-100 rounded-lg dark:bg-red-200" role="alert">
                <svg class="flex-shrink-0 w-5 h-5 text-red-700 dark:text-red-800" fill="currentColor"
                    viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
