        <section class="grid grid-cols-2 grid-rows-1">
            <div class="flex flex-col items-center">
                <h1 class="mb-5 text-3xl font-bold">Candidate Name</h1>
                <img class="h-96 mb-5" src="/img/craig-mckay-jmURdhtm7Ng-unsplash.jpg" alt="Candidate Picture">
                <button id="vote" data-candidate="1"
